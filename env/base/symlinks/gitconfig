# vi: ft=gitconfig :

[user]
  email = sneivandt@users.noreply.github.com
  name = sneivandt
[core]
  editor = vim
  pager = less
  autocrlf = input
  excludesfile = ~/.gitignore
  attributesfile = ~/.gitattributes
[color]
  ui = true
[credential]
  helper = cache
[fetch]
  prune = true
[push]
  default = current
  followTags = true
[diff]
  tool = vimdiff
[diff "bin"]
  textconv = hexdump -v -C
[alias]
  aa = add --all
  ad = add
  br = branch
  brd = branch -d
  ch = checkout
  ci = commit
  cia = commit --amend --reuse-message=HEAD
  cl = clone --recursive
  cp = cherry-pick
  di = diff
  dit = difftool
  fe = fetch --prune
  lo = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  me = merge
  pl = pull
  plr = pull --rebase
  ps = push
  rb = rebase
  rbi = rebase --interactive
  rs = reset
  st = status --short
  ta = tag
  alias         = !git config -l | grep ^alias. | cut -c 7- | sort
  contributors  = shortlog --summary --numbered
  delete-merged = !git branch --merged origin/HEAD | egrep -v '(^\\*|master)' | xargs -r -n 1 git branch -d
[include]
  path = ~/.gitconfig.local
