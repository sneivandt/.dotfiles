#!/usr/bin/env zsh

# Quiet
setopt no_beep
setopt NO_LIST_BEEP
set bell-style none

# Word Style
autoload -U select-word-style
select-word-style bash

# Colors
autoload -U colors
colors

# History
setopt histignorealldups
setopt incappendhistory
HISTFILE=~/.zhistory
HISTSIZE=4096
SAVEHIST=4096

# Various options
setopt autocd
setopt autopushd
setopt pushdminus
setopt pushdsilent
setopt pushdtohome

# Path
. ~/.shell/path

# Aliases
. ~/.shell/aliases

# Prompt
. ~/.zsh/prompt.zsh

# Completion
. ~/.zsh/completion.zsh

# Key bindings
. ~/.zsh/key-bindings.zsh

# Plugins
. ~/.zsh/plugins/*

# Functions
fpath=(~/.shell/functions $fpath)
autoload -U ~/.shell/functions/*