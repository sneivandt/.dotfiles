#!/bin/bash

# Colors
autoload -U colors
colors

# History
setopt histignorealldups
setopt incappendhistory
HISTFILE=~/.zhistory
HISTSIZE=4096
SAVEHIST=4096

# Various options
setopt autocd
setopt autopushd
setopt pushdminus
setopt pushdsilent
setopt pushdtohome

# Prompt
[[ -e ~/.zsh/prompt ]] && . ~/.zsh/prompt

# Completion
[[ -e ~/.zsh/completion ]] && . ~/.zsh/completion

# Key bindings
[[ -e ~/.zsh/key-bindings ]] && . ~/.zsh/key-bindings

# Plugins
[[ -d ~/.zsh/plugins ]] && . ~/.zsh/plugins/*

# Aliases
[[ -e ~/.shell/aliases ]] && . ~/.shell/aliases

# Functions
[[ -e ~/.shell/functions ]] && for f in ~/.shell/functions*; do source "$f"; done

# Path
[[ -e ~/.shell/path ]] && . ~/.shell/path
