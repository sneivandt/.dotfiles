# vi: ft=gitconfig :

[user]
  email = sneivandt@users.noreply.github.com
  name = sneivandt
[core]
  editor = vim
  pager = less
  excludefiles = ~/.gitignore
  autocrlf = input
[color]
  ui = true
[apply]
  whitespace = fix
[credential]
  helper = cache
[diff]
  tool = vimdiff
[diff "bin"]
  textconv = hexdump -v -C
[difftool]
  prompt = false
[alias]
  ad = add
  br = branch
  ca = commit --amend --reuse-message=HEAD
  co = commit
  cl = clone --recursive
  ch = checkout
  cp = cherry-pick
  dc = difftool --cached
  di = diff
  dt = difftool
  fe = fetch --prune
  lf = log -u
  lo = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  me = merge
  pl = pull
  ps = push
  rb = rebase
  ri = rebase --interactive
  rs = reset
  st = status --short
  ta = tag
[include]
  path = ~/.gitconfig.local
