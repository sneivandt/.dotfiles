# vi: ft=gitconfig :

[user]
  email = sneivandt@users.noreply.github.com
  name = sneivandt
[core]
  editor = vim
  pager = less
  autocrlf = input
  excludesfile = ~/.gitignore
[color]
  ui = true
[apply]
  whitespace = fix
[credential]
  helper = cache
[diff]
  tool = vimdiff
[diff "bin"]
  textconv = hexdump -v -C
[push]
  followTags = true
[alias]
  ad = add
  br = branch
  ca = commit --amend --reuse-message=HEAD
  ch = checkout
  cl = clone --recursive
  co = commit
  cp = cherry-pick
  di = diff
  dt = difftool
  fe = fetch --prune
  lo = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  me = merge
  pl = pull
  ps = push
  rb = rebase
  ri = rebase --interactive
  rs = reset
  st = status --short
  ta = tag
  alias         = !git config -l | grep ^alias | cut -c 7- | sort
  contributors  = shortlog --summary --numbered
  delete-merged = !git branch --merged origin/HEAD | egrep -v '(^\\*|master|dev)' | xargs -r -n 1 git branch -d
[include]
  path = ~/.gitconfig.local
