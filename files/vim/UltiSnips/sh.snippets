snippet #! "shebang sh"
#!/bin/sh
endsnippet

snippet #! "shebang bash"
#!/bin/bash
endsnippet

snippet if "if"
if [[ ${1:cond} ]]
then
	${VISUAL}$2
${3:else}
fi$0
endsnippet

snippet elif "elif"
elif [[ ${1:cond} ]]
then
	${VISUAL}$0
endsnippet

snippet else "else"
else
	${VISUAL}$0
endsnippet

snippet switch "case"
case ${1:word} in
	${2:pattern})
		${VISUAL}$3
		;;$4
esac$0
endsnippet

snippet case "pattern"
${1:pattern})
	${VISUAL}$2
	;;$0
endsnippet

snippet for "for"
for $1
do
	${VISUAL}$2
done$0
endsnippet

snippet while "while"
while [[ ${1:cond} ]];
do
	${VISUAL}$2
done$0
endsnippet
