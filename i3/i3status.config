general {
  output_format = "i3bar"
  colors = true
  interval = 1
}

order += "cpu_usage"
order += "disk /"
order += "volume master"
order += "tztime local"

cpu_usage {
  format = "cpu %usage"
}

disk "/" {
  format = "/ %free"
}

volume master {
  format = "â™ª %volume"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
}

tztime local {
  format = "%Y-%m-%d %H:%M:%S"
}
